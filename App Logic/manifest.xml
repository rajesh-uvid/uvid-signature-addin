<?xml version="1.0" encoding="UTF-8"?>
<!--
  UVID Consulting - Signature Add-in Manifest
  Upload this file to the M365 Admin Center under Settings > Integrated Apps.
  Or install manually via Outlook > Get Add-ins > My Add-ins > Add a custom add-in.
-->
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides"
  xsi:type="MailApp">

  <Id>8bf4b32e-5694-4c35-94b2-d8e9cc3237f7</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>UVID Consulting</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="UVID Auto Signature" />
  <Description DefaultValue="Automatically inserts a personalized company signature." />
  <IconUrl DefaultValue="https://rajesh-uvid.github.io/OfficeDev/office-js-snippets/prod/assets/icon-64.png" />
  <HighResolutionIconUrl DefaultValue="https://rajesh-uvid.github.io/OfficeDev/office-js-snippets/prod/assets/icon-128.png" />
  <SupportUrl DefaultValue="https://github.com/rajesh-uvid/uvid-signature-addin" />

  <AppDomains>
    <AppDomain>https://rajesh-uvid.github.io</AppDomain>
    <AppDomain>https://graph.microsoft.com</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <!-- Legacy schema (overridden by VersionOverrides below) -->
  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/App%20Logic/commands.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
  </Rule>

  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  <!-- /Legacy schema -->

  <!--
    VersionOverrides 1.0 — outer wrapper required by schema.
    Older Outlook clients that don't support 1.1 will use this block.
  -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.10">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url" />
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup10">
                <Label resid="GroupName" />
                <Control xsi:type="Button" id="msgComposeOpenPaneButton10">
                  <Label resid="BtnLabel" />
                  <Supertip>
                    <Title resid="BtnLabel" />
                    <Description resid="BtnTooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16" />
                    <bt:Image size="32" resid="Icon32" />
                    <bt:Image size="80" resid="Icon80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon16" DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/assets/image/socialMedia/linkedin.png"/>
        <bt:Image id="Icon32" DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/assets/image/socialMedia/youtube.png"/>
        <bt:Image id="Icon80" DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/assets/image/socialMedia/instagram.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/App%20Logic/commands.html" />
        <bt:Url id="Commands.Js"  DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/App%20Logic/commands.js" />
        <bt:Url id="Taskpane.Url" DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/App%20Logic/taskpane.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupName" DefaultValue="UVID Signature" />
        <bt:String id="BtnLabel"  DefaultValue="Add Signature" />
        <bt:String id="AppDesc"   DefaultValue="Insert a personalized UVID company signature into your email." />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="BtnTooltip" DefaultValue="Click to insert your personalized UVID signature into this email." />
      </bt:LongStrings>
    </Resources>

    <!--
      VersionOverrides 1.1 — nested inside 1.0 (modern Outlook / event-based activation).
      Azure AD Tenant: 666ce4e4-0e70-42c4-bf70-cf444455f075
      WebApplicationInfo below enables SSO via OfficeRuntime.auth.getAccessToken().
      Replace YOUR_AZURE_APP_CLIENT_ID with the Application (client) ID from your
      Azure AD app registration (portal.azure.com > App registrations).
    -->
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      <Description resid="AppDesc" />

      <Requirements>
        <bt:Sets DefaultMinVersion="1.10">
          <bt:Set Name="Mailbox" />
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <!-- LaunchEvent triggers for automatic execution -->
            <ExtensionPoint xsi:type="LaunchEvent">
              <LaunchEvents>
                <LaunchEvent Type="OnNewMessageCompose" FunctionName="onMessageComposeHandler" />
                <LaunchEvent Type="OnMessageReplyCreated" FunctionName="onMessageComposeHandler" />
                <LaunchEvent Type="OnMessageForwardCreated" FunctionName="onMessageComposeHandler" />
                <LaunchEvent Type="OnNewAppointmentOrganizer" FunctionName="onMessageComposeHandler" />
              </LaunchEvents>
              <SourceLocation resid="Commands.Url" />
            </ExtensionPoint>

            <!-- Taskpane button in compose ribbon — user clicks to insert signature -->
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgComposeGroup11">
                  <Label resid="GroupName" />
                  <Control xsi:type="Button" id="msgComposeOpenPaneButton11">
                    <Label resid="BtnLabel" />
                    <Supertip>
                      <Title resid="BtnLabel" />
                      <Description resid="BtnTooltip" />
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon16" />
                      <bt:Image size="32" resid="Icon32" />
                      <bt:Image size="80" resid="Icon80" />
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url" />
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

          </DesktopFormFactor>
        </Host>
      </Hosts>

      <Resources>
        <bt:Images>
          <bt:Image id="Icon16" DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/assets/image/socialMedia/linkedin.png"/>
          <bt:Image id="Icon32" DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/assets/image/socialMedia/youtube.png"/>
          <bt:Image id="Icon80" DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/assets/image/socialMedia/instagram.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Commands.Url" DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/App%20Logic/commands.html" />
          <bt:Url id="Commands.Js"  DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/App%20Logic/commands.js" />
          <bt:Url id="Taskpane.Url" DefaultValue="https://rajesh-uvid.github.io/uvid-signature-addin/App%20Logic/taskpane.html" />
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="GroupName" DefaultValue="UVID Signature" />
          <bt:String id="BtnLabel"  DefaultValue="Admin Test Panel" />
          <bt:String id="AppDesc"   DefaultValue="Automatically inserts a personalized company signature." />
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="BtnTooltip" DefaultValue="Open the admin testing panel for the signature add-in." />
        </bt:LongStrings>
      </Resources>

      <!--
        SSO configuration — links this add-in to your Azure AD app registration.
        <Id>         = Azure App (Client) ID (from App registrations > Overview)
        <Resource>   = The API permission scope URI with tenant embedded.
        <Scopes>     = Microsoft Graph delegated permissions needed.
        Replace YOUR_AZURE_APP_CLIENT_ID with the real Application (client) ID GUID.
      -->
      <WebApplicationInfo>
        <Id>36840c58-eaf2-4911-9c15-1d4505435c9d</Id>
        <Resource>api://rajesh-uvid.github.io/uvid-signature-addin/36840c58-eaf2-4911-9c15-1d4505435c9d</Resource>
        <Scopes>
          <Scope>User.Read</Scope>
          <Scope>openid</Scope>
          <Scope>profile</Scope>
        </Scopes>
      </WebApplicationInfo>

    </VersionOverrides>
    <!-- End VersionOverrides 1.1 -->

  </VersionOverrides>
  <!-- End VersionOverrides 1.0 -->

</OfficeApp>
